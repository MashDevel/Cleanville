//output:../content/detail.html
extends template.jade
block content
    form(method = "POST")
        h4 1. Your Current Location
        .mapholder#map
        h4 2. Select Type of Issue
        .col-1-2
            label
                input(type="radio" name="q1" value="garbage")
                span.glyphicon.glyphicon-trash
            label
                input(type="radio" name="q2" value="foresty")
                span.glyphicon.glyphicon-tree-conifer
            label
                input(type="radio" name="q3" value="work operations")
                span.glyphicon.glyphicon-road
            label
                input(type="radio" name="q4" value="fire")
                span.glyphicon.glyphicon-question-sign
        h4 3. Briefly describe the problem
        textarea#problem_description(rows="5" cols="30" maxlength="50" placeholder="Type here...")
        br
        input.btn.btn-success(type="submit" value="Send")
    script(src="../scripts/map.js")
    script(src="http://maps.google.com/maps/api/js?sensor=false")
